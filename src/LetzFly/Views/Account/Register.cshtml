@{
}
<div class="container">

    @using LetzFly.ViewModels
    @model RegisterViewModel

    <h2>Register a new User</h2>
    <hr />

    @using (Html.BeginForm("Register", "User", FormMethod.Post))
    {
        <table>
            <tr>
                <td>@Html.LabelFor(m => m.FullName)</td>
                <td>@Html.TextBoxFor(m => m.FullName)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.UserName)</td>
                <td>@Html.TextBoxFor(m => m.UserName)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Email)</td>
                <td>@Html.TextBoxFor(m => m.Email)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Password)</td>
                <td>@Html.PasswordFor(m => m.Password)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.ConfirmPassword)</td>
                <td>@Html.PasswordFor(m => m.ConfirmPassword)</td>
            </tr>
            <tr></tr>
            <tr></tr>
            <tr>
                <td><input type="submit" value="Register" class="btn btn-primary" /></td>
            </tr>
        </table>
        <h4 class="redFont">**Note** Password requires at least 6 characters including a capital letter, a digit, and a special character.</h4>
        <br />
        <h4 class="redFont">All fields are required</h4>
            
     }
</div>